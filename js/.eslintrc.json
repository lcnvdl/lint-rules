{
  "env": {
    "commonjs": true,
    "es2021": true,
    "node": true,
    "mocha": true
  },
  "plugins": [
    "chai-friendly"
  ],
  "extends": [
    "airbnb-base"
  ],
  "parserOptions": {
    "ecmaVersion": 12
  },
  "rules": {
    "no-unused-expressions": 0,
    "chai-friendly/no-unused-expressions": 2,
    "max-len": [
      "error",
      {
        "code": 140
      }
    ],
    "quotes": [
      "error",
      "double"
    ],
    "linebreak-style": "off",
    "arrow-parens": [
      "error",
      "as-needed"
    ],
    "object-curly-newline": [
      "error",
      {
        "consistent": true
      }
    ],
    "prefer-const": "warn",
    "no-plusplus": "off",
    "no-underscore-dangle": "off",
    "class-methods-use-this": "warn",
    "brace-style": [
      "error",
      "stroustrup"
    ],
    "no-return-await": "off",
    "no-unused-vars": [
      "warn",
      {
        "argsIgnorePattern": "^_",
        "caughtErrorsIgnorePattern": "^(ignore|_)"
      }
    ],
    "no-use-before-define": [
      "error",
      {
        "functions": false
      }
    ]
  }
}